<p id="notice"><%= notice %></p>

<h1>Height Stats</h1>

<table>
  <thead>
    <tr>
      <th>Height</th>
      <th>Noofdogfans</th>
      <th>Noofcatfans</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @height_stats.each do |height_stat| %>
      <tr>
        <td><%= height_stat.height %></td>
        <td><%= height_stat.noOfDogFans %></td>
        <td><%= height_stat.noOfCatFans %></td>
        <td><%= link_to 'Show', height_stat %></td>
        <td><%= link_to 'Edit', edit_height_stat_path(height_stat) %></td>
        <td><%= link_to 'Destroy', height_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


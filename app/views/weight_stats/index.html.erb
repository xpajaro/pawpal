<p id="notice"><%= notice %></p>

<h1>Weight Stats</h1>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th>Noofdogfans</th>
      <th>Noofcatfans</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weight_stats.each do |weight_stat| %>
      <tr>
        <td><%= weight_stat.weight %></td>
        <td><%= weight_stat.noOfDogFans %></td>
        <td><%= weight_stat.noOfCatFans %></td>
        <td><%= link_to 'Show', weight_stat %></td>
        <td><%= link_to 'Edit', edit_weight_stat_path(weight_stat) %></td>
        <td><%= link_to 'Destroy', weight_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

